<%- include ('partials/_header') -%>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= data.id %>" method="post">
                        <div class="form-group">
                            <input type="text" name="name" value="<%= data.name %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="author" value="<%= data.author %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="duration" value="<%= data.duration %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="version" value="<%= data.version %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="label" value="<%= data.label %>" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Guardar Cambios
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ('partials/_footer') -%>